{
    "compilerOptions": {
        "composite": true,
        "target": "es2022",
        "module": "es2022",
        "moduleResolution": "node",
        "ignoreDeprecations": "6.0",
        "rootDir": "./src",
        "baseUrl": "./src",
        "paths": {
            "@util/*": ["util/*"],
            "@service/*": ["service/*"],
            "@controller/*": ["controller/*"],
            "@middleware/*": ["middleware/*"],
            "@types/*": ["types/*"],
            "@repo/*": ["repo/*"],
            "@config/*": ["config/*"],
            "@router/*": ["router/*"],
            "@templates/*": ["templates/*"]
        },
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "./app",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true
    },
    "ts-node": {
        "esm": true
    }
}
